<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profile | Rate My Fit</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .profile-container {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 30px;
      margin-top: 20px;
      border: 1px solid var(--card-border);
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .profile-header {
      display: flex;
      align-items: center;
      margin-bottom: 30px;
    }
    
    .profile-avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      overflow: hidden;
      margin-right: 20px;
      border: 3px solid var(--accent);
      position: relative;
    }
    
    .profile-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .profile-username {
      font-size: 1.8rem;
      margin-bottom: 5px;
    }
    
    .profile-email {
      opacity: 0.7;
      font-size: 0.9rem;
    }
    
    .profile-form {
      margin-top: 20px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
    }
    
    .form-group input,
    .form-group textarea {
      width: 100%;
      max-width: 450px;
      padding: 12px 15px;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      color: var(--text-primary);
      font-family: 'Outfit', sans-serif;
    }
    
    .form-group textarea {
      min-height: 120px;
      resize: vertical;
    }
    
    .btn-save {
      background: linear-gradient(90deg, #ff4d4d, #f9cb28);
      color: white;
      border: none;
      padding: 12px 25px;
      border-radius: 50px;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.3s ease;
    }
    
    .btn-save:hover {
      transform: translateY(-3px);
    }
    
    .alert {
      padding: 10px 15px;
      margin-bottom: 20px;
      border-radius: 5px;
    }
    
    .alert-success {
      background-color: rgba(0, 255, 100, 0.1);
      border: 1px solid rgba(0, 255, 100, 0.3);
      color: #00ff64;
    }
    
    .alert-error {
      background-color: rgba(255, 77, 77, 0.1);
      border: 1px solid rgba(255, 77, 77, 0.3);
      color: #ff4d4d;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <div class="navbar">
    <a href="/" class="logo">üî• RateMyFit</a>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/trending">Trending</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/profile" class="active">Profile</a>
      <a href="/logout">Logout</a>
    </div>
  </div>

  <div class="container">
    <h1>Edit Profile</h1>
    
    <div class="profile-container">
      <% if (locals.message) { %>
        <div class="alert alert-success">
          <%= message %>
        </div>
      <% } %>
      
      <% if (locals.error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <div class="profile-header">
        <div class="profile-avatar">
          <img src="<%= user.avatar || user.photoURL || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(user.name || user.username) + '&background=FF4D4D&color=fff&size=200' %>" alt="Avatar">
        </div>
        <div>
          <div class="profile-username"><%= user.displayName %></div>
          <div class="profile-email"><%= user.email %></div>
          <div style="margin-top: 8px;">
            <small>Joined <%= new Date(user.createdAt || Date.now()).toLocaleDateString() %></small>
          </div>
        </div>
      </div>
      
      <form action="/profile" method="POST" class="profile-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" value="<%= user.username %>" required pattern="[a-zA-Z0-9_]+" title="Username can only contain letters, numbers, and underscores">
          <small style="color: var(--text-secondary); margin-top: 4px; display: block;">Username can only contain letters, numbers, and underscores</small>
        </div>

        <div class="form-group">
          <label for="displayName">Display Name</label>
          <input type="text" id="displayName" name="displayName" value="<%= user.displayName || user.name || '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="bio">Bio</label>
          <textarea id="bio" name="bio"><%= user.bio || '' %></textarea>
        </div>
        
        <button type="submit" class="btn-save">Save Changes</button>
      </form>
    </div>
  </div>

  <footer>
    Made with ‚ù§Ô∏è by Anush. Let's make it to America! üá∫üá∏
  </footer>
</body>
</html>
