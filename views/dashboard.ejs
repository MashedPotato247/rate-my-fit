<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | RateMyFit</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .dashboard-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
      margin: 30px 0;
    }
    
    .stat-card {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      border: 1px solid var(--card-border);
    }
    
    .stat-card i {
      font-size: 2.5rem;
      color: var(--accent);
      margin-bottom: 10px;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      margin: 10px 0 5px;
    }
    
    .stat-label {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }
    
    .user-details {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 30px;
      text-align: left;
      border: 1px solid var(--card-border);
    }
    
    .user-header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .user-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: bold;
      margin-right: 15px;
    }
    
    .user-name-email {
      flex: 1;
    }
    
    .user-name {
      font-size: 1.5rem;
      margin: 0;
    }
    
    .user-email {
      color: var(--text-secondary);
      margin: 5px 0 0;
    }
    
    .uploads-section h2 {
      margin-top: 0;
      display: flex;
      align-items: center;
    }
    
    .uploads-section h2 i {
      margin-right: 10px;
      color: var(--accent);
    }
    
    .empty-uploads {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 40px 20px;
      text-align: center;
      border: 1px solid var(--card-border);
    }
    
    .empty-uploads i {
      font-size: 3rem;
      color: var(--text-secondary);
      margin-bottom: 15px;
      opacity: 0.7;
    }
    
    .upload-cta {
      margin-top: 20px;
    }
  </style>
</head>
<body>
 
 <div class="navbar">
  <a href="/" class="logo">üî• RateMyFit</a>
  <div class="nav-links">
    <a href="/trending">Trending</a>
    <% if (user) { %>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a>]
    <% } %>
  </div>
</div>

  <div class="container">
    <h1>Dashboard</h1>
    <p class="subtitle">Track your fits and engagement stats</p>
    
    <div class="user-details">
      <div class="user-header">
        <div class="user-avatar">
          <% let userInitial = (user.displayName || user.username || user.email.charAt(0)).toUpperCase(); %>
          <%= userInitial %>
        </div>
        <div class="user-name-email">
          <h2 class="user-name">Welcome, <%= user.displayName %>!</h2>
          <p class="user-email"><i class="fas fa-envelope"></i> <%= user.email %></p>
        </div>
      </div>
    </div>
    
    <div class="dashboard-stats">
      <div class="stat-card">
        <i class="fas fa-tshirt"></i>
        <div class="stat-number"><%= totalUploads || 0 %></div>
        <div class="stat-label">Total Uploads</div>
      </div>
      <div class="stat-card">
        <i class="fas fa-fire"></i>
        <div class="stat-number"><%= totalFireVotes || 0 %></div>
        <div class="stat-label">Fire Votes Received</div>
      </div>
      <div class="stat-card">
        <i class="fas fa-eye"></i>
        <div class="stat-number"><%= profileViews || 0 %></div>
        <div class="stat-label">Profile Views</div>
      </div>
    </div>
    
    <div class="uploads-section">
      <h2><i class="fas fa-photo-film"></i> Your Uploaded Fits</h2>
      
      <% if (locals.msg) { %>
        <p class="message <%= msg.includes('success') ? 'success' : 'error' %>">
          <%= msg %>
        </p>
      <% } %>
      
      <% if (locals.error) { %>
        <p class="message error">
          <%= error %>
        </p>
      <% } %>
      
      <% if (uploads && uploads.length > 0) { %>
        <div class="gallery">
          <% uploads.forEach(outfit => { %>
            <div class="outfit">
              <div class="outfit-image-container">
                <img src="<%= outfit.imageUrl %>" alt="Outfit">
              </div>
              <div class="outfit-stats">
                <span class="vote-count fire-votes">
                  <i class="fas fa-fire"></i> <%= outfit.fireVotes || 0 %>
                </span>
                <span class="vote-count nope-votes">
                  <i class="fas fa-ban"></i> <%= outfit.nopeVotes || 0 %>
                </span>
              </div>
            </div>
          <% }) %>
        </div>
        
        <div class="upload-section" style="margin-top: 30px;">
          <h3>Upload Another Fit</h3>
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="file-input-container">
              <label for="fitImage" class="file-input-label">
                <i class="fas fa-cloud-upload-alt"></i>
                <span>Drag your image here or click to browse</span>
              </label>
              <input type="file" id="fitImage" name="fitImage" accept="image/*" required>
            </div>
            <button type="submit" class="submit-btn">
              <i class="fas fa-upload"></i> Upload Your Fit
            </button>
          </form>
        </div>
      <% } else { %>
        <div class="empty-uploads">
          <i class="fas fa-cloud-upload-alt"></i>
          <h3>No fits uploaded yet</h3>
          <p>Share your style with the world and get feedback!</p>
          
          <div class="upload-section">
            <form action="/upload" method="POST" enctype="multipart/form-data">
              <div class="file-input-container">
                <label for="fitImage" class="file-input-label">
                  <i class="fas fa-cloud-upload-alt"></i>
                  <span>Drag your image here or click to browse</span>
                </label>
                <input type="file" id="fitImage" name="fitImage" accept="image/*" required>
              </div>
              <button type="submit" class="submit-btn">
                <i class="fas fa-upload"></i> Upload Your Fit
              </button>
            </form>
          </div>
      <% } %>
        </div>
      </div>
    </div>
  </div>

  <footer>
    Made with ‚ù§Ô∏è by Anush. Let's make it to America! üá∫üá∏
  </footer>

  <script>
    var uploadInput = document.getElementById('fitImage');
    
    function showFileName() {
      var label = document.querySelector('.file-input-label span');
      if (this.files && this.files[0]) {
        label.textContent = this.files[0].name;
      }
    }
    
    uploadInput.addEventListener('change', showFileName);
  </script>
</body>
</html>
