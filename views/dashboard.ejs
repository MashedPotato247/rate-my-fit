<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | RateMyFit</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .dashboard-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
      margin: 30px 0;
    }
    
    .stat-card {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      border: 1px solid var(--card-border);
    }
    
    .stat-card i {
      font-size: 2.5rem;
      color: var(--accent);
      margin-bottom: 10px;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      margin: 10px 0 5px;
    }
    
    .stat-label {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }
    
    .user-details {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 30px;
      text-align: left;
      border: 1px solid var(--card-border);
    }
    
    .user-header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .user-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: bold;
      margin-right: 15px;
    }
    
    .user-name-email {
      flex: 1;
    }
    
    .user-name {
      font-size: 1.5rem;
      margin: 0;
    }
    
    .user-email {
      color: var(--text-secondary);
      margin: 5px 0 0;
    }
    
    .uploads-section h2 {
      margin-top: 0;
      display: flex;
      align-items: center;
    }
    
    .uploads-section h2 i {
      margin-right: 10px;
      color: var(--accent);
    }
    
    .empty-uploads {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 40px 20px;
      text-align: center;
      border: 1px solid var(--card-border);
    }
    
    .empty-uploads i {
      font-size: 3rem;
      color: var(--text-secondary);
      margin-bottom: 15px;
      opacity: 0.7;
    }
    
    .upload-cta {
      margin-top: 20px;
    }
    
    .sidebar-footer {
      margin-top: 20px;
      padding: 10px;
      text-align: center;
      font-size: 0.9rem;
      color: var(--text-secondary);
    }
    
    .sidebar-separator {
      border: 0;
      height: 1px;
      background: var(--card-border);
      margin: 10px 0;
    }
  </style>
</head>
<body>
 
 <div class="navbar">
  <div class="nav-left">
    <a href="/" class="logo">üî• RateMyFit</a>
  </div>
  <div class="nav-right">
    <button class="menu-btn" id="sidebar-toggle"><i class="fas fa-bars"></i></button>
  </div>
</div>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <h2><i class="fas fa-bars"></i> Menu</h2>
  </div>
  <div class="sidebar-links">
    <a href="/dashboard" class="<%= currentPath === '/dashboard' ? 'active' : '' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="/" class="<%= currentPath === '/' ? 'active' : '' %>"><i class="fas fa-home"></i> Home</a>
    <a href="/trending" class="<%= currentPath === '/trending' ? 'active' : '' %>"><i class="fas fa-fire"></i> Trending</a>
    <a href="/profile" class="<%= currentPath === '/profile' ? 'active' : '' %>"><i class="fas fa-user"></i> Profile</a>
    <!-- Add more links as needed -->
  </div>
  <% if (user) { %>
    <hr class="sidebar-separator"> <!-- Added separator -->
    <div class="user-info">
      <% if (user) { %>
        <div class="sidebar-user-details">
          <div class="sidebar-avatar">
            <% 
            let sidebarInitial = "";
            if (user.displayName) {
              const sidebarNames = user.displayName.split(' ');
              sidebarInitial = sidebarNames.map(n => n[0]).join('').substring(0,2).toUpperCase();
            } else if (user.username) {
              sidebarInitial = user.username.substring(0,1).toUpperCase();
            } else if (user.email) {
              sidebarInitial = user.email.substring(0,1).toUpperCase();
            } 
            %>
            <%= sidebarInitial %>
          </div>
          <div>
            <p class="user-name"><%= user.displayName || user.username || 'User' %></p>
            <p class="user-email"><%= user.email || '' %></p>
          </div>
        </div>
        <div class="sidebar-links"> <!-- Logout link separate or styled differently -->
          <a href="/logout" class="logout-action"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
        <hr class="sidebar-separator"> <!-- Added separator -->
      <% } %>
    </div>
  <% } else { %>
    <div class="sidebar-links">
        <a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
        <a href="/register"><i class="fas fa-user-plus"></i> Register</a>
    </div>
  <% } %>
  <div class="sidebar-footer">
    RateMyFit &copy; 2024
  </div>
</div>

<!-- Overlay -->
<div class="overlay" id="overlay"></div>

  <div class="container">
    <h1>Dashboard</h1>
    <p class="subtitle">Track your fits and engagement stats</p>
    
    <div class="user-details">
      <div class="user-header">
        <div class="user-avatar">
          <% 
          let userInitial = "";
          if (user && user.displayName) {
            const namesArray = user.displayName.split(' ');
            userInitial = namesArray.map(name => name.charAt(0)).join('').toUpperCase();
          } else if (user && user.username) {
            const namesArray = user.username.split(' '); // Assuming username might also contain spaces
            userInitial = namesArray.map(name => name.charAt(0)).join('').toUpperCase();
          } else if (user && user.email) {
            userInitial = user.email.charAt(0).toUpperCase();
          } else {
            userInitial = "U"; // Default initial if no user info
          } 
          %>
          <%= userInitial %>
        </div>
        <div class="user-name-email">
          <h2 class="user-name">Welcome, <%= user ? (user.displayName || user.username || 'User') : 'User' %>!</h2>
          <p class="user-email"><%= user && user.email ? user.email : '' %></p>
        </div>
      </div>
    </div>
    
    <div class="dashboard-stats">
      <div class="stat-card">
        <i class="fas fa-tshirt"></i>
        <div class="stat-number"><%= totalUploads || 0 %></div>
        <div class="stat-label">Total Uploads</div>
      </div>
      <div class="stat-card">
        <i class="fas fa-fire"></i>
        <div class="stat-number"><%= totalFireVotes || 0 %></div>
        <div class="stat-label">Fire Votes Received</div>
      </div>
      <div class="stat-card">
        <i class="fas fa-eye"></i>
        <div class="stat-number"><%= profileViews || 0 %></div>
        <div class="stat-label">Profile Views</div>
      </div>
    </div>
    
    <div class="uploads-section">
      <h2><i class="fas fa-photo-film"></i> Your Uploaded Fits</h2>
      
      <% if (locals.msg) { %>
        <p class="message <%= locals.msg.includes('success') ? 'success' : 'error' %>">
          <%= locals.msg %>
        </p>
      <% } %>
      
      <% if (locals.error) { %>
        <p class="message error">
          <%= locals.error %>
        </p>
      <% } %>
      
      <% if (uploads && uploads.length > 0) { %>
        <div class="gallery">
          <% uploads.forEach(outfit => { %>
            <div class="outfit">
              <div class="outfit-image-container">
                <img src="<%= outfit.imageUrl %>" alt="Outfit">
              </div>
              <div class="outfit-stats">
                <span class="vote-count fire-votes">
                  <i class="fas fa-fire"></i> <%= outfit.fireVotes || 0 %>
                </span>
                <span class="vote-count nope-votes">
                  <i class="fas fa-ban"></i> <%= outfit.nopeVotes || 0 %>
                </span>
              </div>
            </div>
          <% }) %>
        </div>
        
        <div class="upload-section" style="margin-top: 30px;">
          <h3>Upload Another Fit</h3>
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="file-input-container">
              <label for="fitImage" class="file-input-label">
                <i class="fas fa-cloud-upload-alt"></i>
                <span>Drag your image here or click to browse</span>
              </label>
              <input type="file" id="fitImage" name="fitImage" accept="image/*" required>
            </div>
            <button type="submit" class="submit-btn">
              <i class="fas fa-upload"></i> Upload Your Fit
            </button>
          </form>
        </div>
      <% } else { %>
        <div class="empty-uploads">
          <i class="fas fa-cloud-upload-alt" style="font-size: 3rem; color: var(--text-secondary); margin-bottom: 15px; opacity: 0.7;"></i>
          <p style="color: var(--text-secondary);">No fits uploaded yet. Why not upload one?</p>
        </div>
      <% } %>
    </div> <!-- This closes .uploads-section -->
  </div> <!-- This closes .container -->

  <footer>
    Made with ‚ù§Ô∏è by Anush. Let's make it to America! üá∫üá∏
  </footer>

  <script src="/js/navbar.js"></script>
  <script>
    var uploadInput = document.getElementById('fitImage');
    
    function showFileName() {
      var label = document.querySelector('.file-input-label span');
      if (this.files && this.files[0]) {
        label.textContent = this.files[0].name;
      }
    }
    
    uploadInput.addEventListener('change', showFileName);
  </script>
</body>
</html>
